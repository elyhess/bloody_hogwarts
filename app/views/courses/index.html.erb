<h1>All Courses:</h1>

<% @courses.each do |course| %>
  <section id="course-<%= course.id %>">
    <p><%= course.name %> has <%= course.students.student_count %> students</p>
    <p>Students:</p>
    <% course.students.order_alphabetically.each do |student| %>
      <p class='student'><%= student.name %></p>
    <% end %><br>
  </section>
<% end %>